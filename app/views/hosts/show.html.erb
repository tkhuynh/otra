<div class="container" id="user">
	<div class="row">
		<div class="col-md-4">
			<div class="user-container">
				<h2 class="headers"><%= @host.name %></h2>
				<br>
				<br>
				<%= image_tag @host.avatar.url(:thumb), class: "img-responsive user-avatar"%>
				<h4>&emsp;<span class="glyphicon glyphicon-envelope"> <%= @host.email %></h4>
				<h4>&emsp;<span class="glyphicon glyphicon-globe"> <%= @host.location %></h4>
				<h4>&emsp;<span class="glyphicon glyphicon-music"></span> 
					<% if @host.about == nil and current_user.type == "Host" %>
						<%= link_to "Please Update", edit_user_path %>
					<% else %>
						<%= @host.about %>
					<% end %>
					</h4>
				<% if current_user.type == "Host" %>
					<h3>&emsp;<%= link_to "Find Performance", performances_path %></h3>
				<% end %>
			</div>
		</div>
		<div class="col-md-8">
			<div class="dashboard-parent">
		<div class="dashboard-content">
			<% @host.shows.each do |show| %>
				<div class="col-xs-4">
					<div class="shadowbox">
						<h3 class="headers">
							<%= show.venue %>
						</h3>
						<br>
						<br>
						<div class="card-body">

						<div class="flyer">
							<%= image_tag show.flyer.url(:medium) %>
						</div>
							<%= show.show_date.strftime("%m/%d/%Y") %> <br> <span><%= show.location %></span>
							<hr>
							<%= link_to "View details", show_path(show) %><br>
							<% if current_user.type == "Host" %>
								<%= link_to "Edit", edit_show_path(show) %>
							<% end %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
		</div>
	</div>
</div>