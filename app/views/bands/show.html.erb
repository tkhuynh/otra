<div class="container">
	<div class="row">
		<h1><%= @band.name %></h1>
		<h3>Home City: <%= @band.location %></h3>
		<h4>About Us: <%= @band.about %></h4>
		<hr>
		<div class="col-xs-12">
			<div class="dashboard-content">
				<% @band.tours.each do |tour| %>
					<div class="show-wraper">
						<h3 class="headers"><%= link_to tour.name, tour_path(tour) %><span class="glyphicon glyphicon-globe pull-right view-map"></span></h3>
						<div class="row performance-tags">
							<div class="col-xs-4">
								<div class="shadowbox">
									<h3 class="headers">SCHEDULED SHOWS</h3>
									<br>
									<br>
									<div class="card-body">
										<% tour.performances.where(status: 'scheduled').each do |perf| %>
											<% if @pending_performances.any? %>
												<% if @pending_performances.include?(perf) == false %>
													<%= link_to perf.performance_date.strftime("%m/%d/%Y"), performance_path(perf) %> <br> <span><%= perf.location %></span>
													<hr>
												<% end %>
											<% end %>
										<% end %>
									</div>
								</div>
							</div>
							<div class="col-xs-4">
								<div class="shadowbox">
									<h3 class="headers">PENDING SHOWS</h3>
									<br>
									<br>
									<div class="card-body">
										<% tour.performances.where(status: 'scheduled').each do |perf| %>
											<% if @pending_performances.any? %>
												<% if @pending_performances.include?(perf) %>
													<%= perf.performance_date.strftime("%m/%d/%Y") %> <br> <span><%= perf.location %></span>
													<hr>
												<% end %>
											<% end %>
										<% end %>
									</div>
								</div>
							</div>
							<div class="col-xs-4">
								<div class="shadowbox">
									<h3 class="headers">CONFIRMED SHOWS</h3>
									<br>
									<br>
									<div class="card-body">
										<% tour.performances.where(status: 'confirmed').each do |perf| %>
										<%= link_to perf.performance_date.strftime("%m/%d/%Y"), performance_path(perf) %> <br> 
										<span><%= perf.location %></span>
										<hr>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>