<div class="container">
	<h2><%= @band.name %></h2>
	<%= link_to "Add Tour", new_tour_path %>
	<br>
	<%= link_to "Find Venue", shows_path %>
	<hr>
	<h2>
		Current Tours
	</h2>
	<% @band.tours.all.each do |tour| %>
		<ul>
			<h3><%= tour.name %></h3>
			<% tour.performances.order("performance_date asc").all.each do |perf| %>
				<li>
					<%= perf.performance_date %> - <%= perf.location %> - <%= perf.status %>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>