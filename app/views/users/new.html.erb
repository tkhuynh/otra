<div class="container-fluid signup">
	<div class="row how-it-works">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
			<div class="tagline-wrapper">
				<%= image_tag "otraband-01.png", class: "logo-info band-signup img-responsive" %>
				<p class="tagline image-labels band-signup">BANDS</p>
			</div>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
			<div class="tagline-wrapper">
				<%= image_tag "otrahosts-01.png", class: "logo-info host-signup img-responsive" %>
				<p class="tagline image-labels host-signup">HOSTS</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 signup-form-holder">
			<div class="signup-form">
				<h3 class="text-center form-title">Get Started</h3>
				<div class="row">
					<div class="col-xs-10 col-xs-offset-1">
						<%= form_for :user, url: users_path, method: :post, html: { multipart: true } do |f| %>
							<div class="form-group">
								<%=  f.label :name %>
								<%=  f.text_field :name, class: "form-control", required: true %>
							</div>
							<div class="form-group">
								<%=  f.label :email %>
								<%=  f.email_field :email, class: "form-control", required: true %>
							</div>
							<div class="form-group">
								<%=  f.label :location %>
								<%=  f.text_field :location, class: "form-control city_stops", required: true %>
							</div>
							<div class="form-group">
								<%=  f.label :type, "Band/Host" %>
								<%=  f.collection_select :type, @role, :to_s, :to_s, {prompt: "Are you are band or host?"}, class: "form-control", required: true %>
							</div>
							<div class="form-group">
								<%=  f.label :password %>
								<%=  f.password_field :password, class: "form-control", required: true %>
							</div>
							<div class="form-group">
								<%=  f.label :password_confirmation %>
								<%=  f.password_field :password_confirmation, class: "form-control", required: true %>
							</div>
							<div class="form-group text-center">
								<%= f.submit "Sign Up", class: "btn btn-primary form-control" %>
							</div>
						<% end %>
						<p class="text-center login-signup-footer">Already a member? <%= link_to "Click Here", login_path %> to login.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>