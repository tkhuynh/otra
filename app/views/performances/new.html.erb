<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<%= form_for [@tour, @performance] do |f| %>
				<h1>Add New Performance</h1>
				<div class="form-group">
					<%= f.label :location, "City" %>
					<%= f.text_field :location, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :performance_date, "Date" %>
					<%= f.date_select :performance_date, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.submit "Save", class: "btn btn-primary form-control" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
